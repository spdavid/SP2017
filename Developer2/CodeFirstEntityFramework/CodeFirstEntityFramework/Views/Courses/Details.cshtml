@model CodeFirstEntityFramework.Models.Course

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.School.Name)</h2>
<h3>@Html.DisplayFor(model => model.Name)</h3>
<a href="/schoolclasses/create?courseid=@Model.Id"><span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"></span></a>


<div>
    <h4>Classes</h4>
    <hr />
  <table class="table">
    <tr>
        <th>
            ClassName
        </th>

        <th>
            Teacher
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.SchoolClasses) {
    <tr>
       
      
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "SchoolClasses", new { id=item.Id }, null) |
            @Html.ActionLink("Details", "Details", "SchoolClasses", new { id=item.Id },null) |
            @Html.ActionLink("Delete", "Delete", "SchoolClasses", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
